<core:FragmentDefinition xmlns:tnt="sap.tnt" xmlns:form="sap.ui.layout.form" xmlns="sap.m" xmlns:core="sap.ui.core" >
	<Dialog id="updateDialog" title="UPDATE" titleAlignment="Center" contentWidth="42%">
    <content >
			<form:SimpleForm layout="ResponsiveGridLayout">
				<form:content>
					<Label text="PAGEID"  design="Bold" />
                    <Input  type="Text" id="uidInput" enabled="false"/>
					<Label text="DESCRIPTION"  design="Bold"/>
                    <Input  type="Text" id="udescInput" />
				</form:content>
			</form:SimpleForm>
		</content>
		<beginButton>
			<Button tooltip="CREATE" text="CREATE" type="Accept" press=".onUpdate"/>
		</beginButton>
		<endButton>
			<Button tooltip="Cancel" text="CANCEL" type="Reject" press=".onCloseUpdate"/>
		</endButton>
    </Dialog>
</core:FragmentDefinition>